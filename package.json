{
  "name": "overlay-assistant",
  "version": "1.0.0",
  "description": "A beautiful transparent overlay window for desktop assistance",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox --disable-gpu --disable-software-rasterizer",
    "dev": "electron . --no-sandbox --disable-gpu --disable-software-rasterizer --enable-logging",
    "build": "electron-builder",
    "build-css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch"
  },
  "keywords": [
    "electron",
    "overlay",
    "desktop",
    "assistant",
    "transparent"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "tailwindcss": "^3.3.3"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "microsoft-cognitiveservices-speech-sdk": "^1.45.0",
    "winston": "^3.10.0"
  },
  "build": {
    "appId": "com.overlayassistant.app",
    "productName": "Overlay Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!src/**/*",
      "dist/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    }
  }
}
